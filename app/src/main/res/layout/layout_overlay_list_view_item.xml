<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/image_list_view_item_margin"
    android:layout_marginStart="@dimen/image_list_view_item_margin"
    android:layout_marginEnd="@dimen/image_list_view_item_margin"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:background="@android:color/holo_red_dark"
    app:cardCornerRadius="@dimen/bg_corners_5dp"
    app:cardElevation="2dp">
    <!--android:layout_margin="@dimen/image_list_view_item_margin"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/dodgerblue"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/image_list_view_subitem_margin_top"
            android:layout_marginBottom="@dimen/image_list_view_subitem_margin_top"
            android:layout_marginLeft="@dimen/image_list_view_subitem_text_margin_start_end"
            android:layout_marginRight="@dimen/image_list_view_subitem_text_margin_start_end"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/overlay_list_sample_text"/>

      <ImageView android:id="@+id/overlay_view_img"
          android:layout_width="match_parent"
          android:layout_height="@dimen/image_list_view_item_height"
          android:scaleType="fitXY"
          android:gravity="center_vertical"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
