<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/image_list_view_item_margin"
    android:orientation="horizontal">

  <android.support.v7.widget.CardView
      android:layout_width="@dimen/person_list_view_img_size"
      android:layout_height="@dimen/person_list_view_img_size"
      app:cardCornerRadius="@dimen/person_list_view_img_radius">

    <ImageView android:id="@+id/person_list_view_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:gravity="center_vertical"/>
  </android.support.v7.widget.CardView>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/person_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/image_list_view_item_margin"
        android:layout_marginRight="@dimen/image_list_view_item_margin"
        android:textColor="@color/dark_gray"
        android:layout_gravity="center"
        android:maxLines="2"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/image_list_view_item_margin"
        android:padding="10dp"
        android:background="@drawable/listview_person_item_bg"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_marginRight="@dimen/image_list_view_subitem_text_margin_start_end"
          android:textColor="@color/dark_gray"
          android:maxLines="2"
          android:ellipsize="end"
          android:text="@string/list_view_subitem_content_first"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_marginTop="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_marginEnd="@dimen/image_list_view_subitem_text_margin_start_end"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dodgerblue"
            android:layout_alignParentEnd="true"
            android:text="@string/person_list_content_more"/>
      </RelativeLayout>

    </LinearLayout>
  </LinearLayout>


</LinearLayout>