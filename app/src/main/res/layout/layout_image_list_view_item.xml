<?xml version="1.0" encoding="utf-8"?>
<com.jgo.jgodemos.listview.RoundCornerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/image_list_view_item_margin"
    android:gravity="center_vertical"
    android:background="@color/transparent"
    android:orientation="vertical">

  <ImageView android:id="@+id/image_list_view_img"
      android:layout_width="match_parent"
      android:layout_height="@dimen/image_list_view_item_height"
      android:layout_centerVertical="true"
      android:scaleType="fitXY"
      android:gravity="center_vertical"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="3333333333333"/>

</com.jgo.jgodemos.listview.RoundCornerLayout>
