<?xml version="1.0" encoding="utf-8"?>
<com.jgo.jgodemos.listview.RoundCornerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/image_list_view_item_margin"
    android:gravity="center_vertical"
    android:background="@drawable/listview_image_bg"
    android:orientation="vertical">

  <ImageView android:id="@+id/image_list_view_img"
      android:layout_width="match_parent"
      android:layout_height="@dimen/image_list_view_item_height"
      android:layout_centerVertical="true"
      android:scaleType="fitXY"
      android:gravity="center_vertical"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/list_view_first_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_list_view_subitem_height"
        android:layout_marginTop="@dimen/image_list_view_subitem_margin_top"
        android:orientation="horizontal">
      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_marginRight="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_weight="5"
          android:textColor="@color/dark_gray"
          android:layout_gravity="center"
          android:maxLines="2"
          android:ellipsize="end"
          android:text="@string/list_view_subitem_content_first"/>

      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/image_list_view_subitem_image_size"
            android:layout_height="@dimen/image_list_view_subitem_image_size"
            android:scaleType="fitXY"
            android:src="@mipmap/photo_1"/>
      </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_view_second_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_list_view_subitem_height"
        android:layout_marginTop="@dimen/image_list_view_subitem_margin_top"
        android:orientation="horizontal">
      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_marginRight="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_weight="5"
          android:textColor="@color/dark_gray"
          android:layout_gravity="center"
          android:maxLines="2"
          android:ellipsize="end"
          android:text="@string/list_view_subitem_content_second"/>

      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/image_list_view_subitem_image_size"
            android:layout_height="@dimen/image_list_view_subitem_image_size"
            android:scaleType="fitXY"
            android:src="@mipmap/photo_2"/>
      </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_view_third_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_list_view_subitem_height"
        android:layout_marginTop="@dimen/image_list_view_subitem_margin_top"
        android:orientation="horizontal">
      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_marginRight="@dimen/image_list_view_subitem_text_margin_start_end"
          android:layout_weight="5"
          android:textColor="@color/dark_gray"
          android:layout_gravity="center"
          android:maxLines="2"
          android:ellipsize="end"
          android:text="@string/list_view_subitem_content_third"/>

      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/image_list_view_subitem_image_size"
            android:layout_height="@dimen/image_list_view_subitem_image_size"
            android:scaleType="fitXY"
            android:src="@mipmap/photo_3"/>
      </FrameLayout>

    </LinearLayout>

  </LinearLayout>


</com.jgo.jgodemos.listview.RoundCornerLayout>
